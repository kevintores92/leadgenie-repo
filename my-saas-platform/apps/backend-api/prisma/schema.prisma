generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())

  // Wallet and AI feature flags
  walletBalance        Float                     @default(0.0)
  aiRepliesEnabled     Boolean                   @default(false)
  aiCallsEnabled       Boolean                   @default(false)
  plan                 Plan                      @default(STARTER)
  marketplaces         String[]                  @default([])
  areaCode             String?
  timeZone             String?
  pricingMarkupPercent Int                       @default(30)

  brands               Brand[]
  users                User[]
  usages               Usage[]
  sendingNumbers       SendingNumber[]
  activities           Activity[]
  contacts             Contact[]
  wallet               OrganizationWallet?
  subscription         OrganizationSubscription?
  uploadJobs           UploadJob[]
}

model Usage {
  id             String   @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  type           String
  cost           Float
  createdAt      DateTime @default(now())
}

model Brand {
  id                   String   @id @default(cuid())
  orgId                String
  organization         Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  name                 String
  twilioSubaccountSid  String?
  subaccountAuthToken  String?
  callingMode          String
  aiVoicePlatformUrl   String?
  createdAt            DateTime @default(now())

  users                User[]
  phoneNumbers         PhoneNumber[]
  campaigns            Campaign[]
  contacts             Contact[]
  messages             Message[]
  calls                CallLog[]
  customFieldDefs      CustomFieldDefinition[]
}

model User {
  id            String   @id @default(cuid())
  orgId         String
  organization  Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  activeBrandId String?
  activeBrand   Brand?   @relation(fields: [activeBrandId], references: [id])
  username      String   @unique
  email         String?
  passwordHash  String?
  createdAt     DateTime @default(now())

  campaigns     Campaign[]
}

model PhoneNumber {
  id              String   @id @default(cuid())
  organizationId  String
  brandId         String?
  brand           Brand?   @relation(fields: [brandId], references: [id], onDelete: Cascade)
  twilioSid       String   @unique
  phoneNumber     String   @unique
  status          PhoneNumberStatus @default(ACTIVE)
  warmupLevel     Int      @default(1)
  lastUsedAt      DateTime?
  createdAt       DateTime @default(now())

  campaigns       CampaignPhoneNumber[]
  contactsAssigned Contact[] @relation("AssignedNumber")
}

model CampaignPhoneNumber {
  id            String   @id @default(cuid())
  campaignId    String
  phoneNumberId String

  campaign      Campaign  @relation(fields: [campaignId], references: [id])
  phoneNumber   PhoneNumber @relation(fields: [phoneNumberId], references: [id])

  @@unique([campaignId, phoneNumberId])
}

enum PhoneNumberStatus {
  ACTIVE
  WARMING
  PAUSED
  BLOCKED
}

model Campaign {
  id         String   @id @default(cuid())
  brandId    String
  brand      Brand    @relation(fields: [brandId], references: [id], onDelete: Cascade)
  userId     String?
  user       User?    @relation(fields: [userId], references: [id])
  name       String
  callingMode String
  status     CampaignStatus @default(DRAFT)
  pausedReason String?
  templatePrimary    String?
  templateAlternate  String?
  batchSize          Int?
  intervalMinutes    Int?
  quietHoursStart    Int?    // hour 0-23
  quietHoursEnd      Int?
  createdAt  DateTime @default(now())
  campaignPhoneNumbers CampaignPhoneNumber[]
}

model Message {
  id           String   @id @default(cuid())
  brandId      String
  brand        Brand    @relation(fields: [brandId], references: [id], onDelete: Cascade)
  contactId    String
  contact      Contact  @relation(fields: [contactId], references: [id], onDelete: Cascade)
  direction    MessageDirection
  status       MessageStatus
  channel      MessageChannel
  fromNumber   String
  toNumber     String
  body         String?
  sentAt       DateTime?
  twilioSid    String?   @unique
  isAiGenerated Boolean @default(false)
  createdAt    DateTime @default(now())
}

model CallLog {
  id         String   @id @default(cuid())
  brandId    String
  brand      Brand    @relation(fields: [brandId], references: [id], onDelete: Cascade)
  contactId  String
  contact    Contact  @relation(fields: [contactId], references: [id], onDelete: Cascade)
  callSid    String   @unique
  duration   Int?
  status     String?
  transcript String?
  createdAt  DateTime @default(now())
}

model Contact {
  id               String   @id @default(cuid())
  brandId          String
  brand            Brand    @relation(fields: [brandId], references: [id], onDelete: Cascade)
  organizationId   String?
  organization     Organization? @relation(fields: [organizationId], references: [id])
  firstName        String
  lastName         String?
  phone             String
  lineType          String?
  phoneType        String?
  carrier          String?
  country          String?
  isPhoneValid     Boolean  @default(false)
  propertyAddress  String?
  propertyCity     String?
  propertyState    String?
  propertyZip      String?
  propertyCounty   String?
  mailingAddress   String?
  mailingUnit      String?
  mailingCity      String?
  mailingState     String?
  mailingZip       String?
  mailingCounty    String?
  assignedNumberId String?
  assignedNumber   PhoneNumber? @relation("AssignedNumber", fields: [assignedNumberId], references: [id])
  status           String?
  nextEligibleAt   DateTime?
  aiScore          Decimal?
  tags             String[] @default([])
  lastSmsSentAt    DateTime?
  lastInboundAt    DateTime?
  hasReplied       Boolean   @default(false)
  updatedAt        DateTime @updatedAt
  createdAt        DateTime @default(now())

  messages         Message[]
  calls            CallLog[]
  customFields     ContactCustomField[]
  contactAudits    ContactAudit[]

  @@index([brandId])
  @@unique([brandId, phone])
}

model DeliverabilityScore {
  id         String   @id @default(cuid())
  entityType DeliverabilityEntity
  entityId   String
  score      Float    @default(100)
  updatedAt  DateTime @updatedAt
}

enum DeliverabilityEntity {
  PHONE_NUMBER
  CAMPAIGN
}

model OrgBillingControl {
  organizationId String  @id
  monthlyCapUSD  Float
  spentThisMonth Float   @default(0)
}


enum MessageDirection {
  INBOUND
  OUTBOUND
}

enum MessageStatus {
  OUTBOUND_API
  OUTBOUND_MANUAL
  QUEUED
  SENT
  DELIVERED
  FAILED
}

enum MessageChannel {
  SMS
  MANUAL
}

enum CampaignStatus {
  DRAFT
  RUNNING
  PAUSED
  COMPLETED
}

enum Plan {
  STARTER
  PRO
}

model SendingNumber {
  id             String   @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  phoneNumber    String   @unique
  label          String?
  enabled        Boolean  @default(true)
  lastUsedAt     DateTime?
  lastUsedCount  Int      @default(0)
  createdAt      DateTime @default(now())
}

model CustomFieldDefinition {
  id        String   @id @default(cuid())
  brandId   String
  brand     Brand    @relation(fields: [brandId], references: [id], onDelete: Cascade)
  name      String
  type      String
  createdAt DateTime @default(now())

  values    ContactCustomField[]
}

model ContactCustomField {
  id                String   @id @default(cuid())
  contactId         String
  contact           Contact  @relation(fields: [contactId], references: [id], onDelete: Cascade)
  fieldDefinitionId String
  fieldDefinition   CustomFieldDefinition @relation(fields: [fieldDefinitionId], references: [id], onDelete: Cascade)
  value             Json
  createdAt         DateTime @default(now())

  @@index([contactId])
  @@index([fieldDefinitionId])
}

model ContactAudit {
  id              String   @id @default(cuid())
  contactId       String
  contact         Contact  @relation(fields: [contactId], references: [id], onDelete: Cascade)
  changedByUserId String?
  changedBy       String?
  action          String   @default("UPDATE")
  changes         Json
  createdAt       DateTime @default(now())

  @@index([contactId])
}

model Activity {
  id             String   @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  userId         String?
  type           String
  message        String
  meta           Json?
  createdAt      DateTime @default(now())
}

model ComplianceAuditLog {
  id             String   @id @default(cuid())
  organizationId String
  entityType     String
  entityId       String
  action         String
  reason         String
  metadata       Json?
  createdAt      DateTime @default(now())
}

model OrganizationWallet {
  id              String                 @id @default(uuid())
  organizationId  String                 @unique
  balanceCents    Int                    @default(0)
  isFrozen        Boolean                @default(false)
  createdAt       DateTime               @default(now())
  updatedAt       DateTime               @updatedAt
  organization    Organization           @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  transactions    WalletTransaction[]
}

model WalletTransaction {
  id             String                 @id @default(uuid())
  walletId       String
  organizationId String
  type           WalletTransactionType
  amountCents    Int
  referenceId    String?
  createdAt      DateTime               @default(now())
  wallet         OrganizationWallet     @relation(fields: [walletId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([walletId])
}

model OrganizationSubscription {
  id               String               @id @default(uuid())
  organizationId   String               @unique
  provider         BillingProvider
  providerSubId    String               @unique
  planId           String
  status           SubscriptionStatus
  currentPeriodEnd DateTime
  createdAt        DateTime             @default(now())
  updatedAt        DateTime             @updatedAt
  organization     Organization         @relation(fields: [organizationId], references: [id], onDelete: Cascade)
}

enum WalletTransactionType {
  PAYMENT_TOPUP
  MESSAGE_DEBIT
  REFUND
  ADJUSTMENT
}

enum BillingProvider {
  PAYPAL
  STRIPE
}

enum SubscriptionStatus {
  ACTIVE
  PAST_DUE
  CANCELED
  SUSPENDED
}

model WebhookEvent {
  id        String   @id @default(uuid())
  externalId String   @unique
  type      String
  data      Json
  createdAt DateTime @default(now())

  @@index([type])
}

model UploadJob {
  id               String   @id @default(cuid())
  organizationId   String
  organization     Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  originalFilename String
  totalRows        Int      @default(0)
  mobileCount      Int      @default(0)
  landlineCount    Int      @default(0)
  status           UploadJobStatus @default(QUEUED)
  zipPath          String?
  errorMessage     String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([organizationId])
  @@index([status])
}

model PhoneValidationCache {
  id           String   @id @default(cuid())
  phone        String   @unique
  phoneType    String?
  carrier      String?
  country      String?
  isValid      Boolean  @default(false)
  lastCheckedAt DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([phone])
}

enum UploadJobStatus {
  QUEUED
  PROCESSING
  COMPLETED
  FAILED
}
