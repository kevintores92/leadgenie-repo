generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())

  // Wallet and AI feature flags
  walletBalance    Float   @default(0.0)
  aiRepliesEnabled Boolean @default(false)
  aiCallsEnabled   Boolean @default(false)
  plan             Plan    @default(STARTER)
  marketplaces     String[] @default([])
  areaCode         String?
  timeZone         String?

  brands    Brand[]
  users     User[]
  usages    Usage[]
  sendingNumbers SendingNumber[]
  activities Activity[]
  contacts  Contact[]
}

model Usage {
  id             String   @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  type           String
  cost           Float
  createdAt      DateTime @default(now())
}

model Brand {
  id                   String   @id @default(cuid())
  orgId                String
  organization         Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  name                 String
  twilioSubaccountSid  String?
  subaccountAuthToken  String?
  callingMode          String
  aiVoicePlatformUrl   String?
  createdAt            DateTime @default(now())

  users                User[]
  phoneNumbers         PhoneNumber[]
  campaigns            Campaign[]
  contacts             Contact[]
  messages             Message[]
  calls                CallLog[]
  customFieldDefs      CustomFieldDefinition[]
}

model User {
  id            String   @id @default(cuid())
  orgId         String
  organization  Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  activeBrandId String?
  activeBrand   Brand?   @relation(fields: [activeBrandId], references: [id])
  username      String   @unique
  createdAt     DateTime @default(now())

  campaigns     Campaign[]
}

model PhoneNumber {
  id         String   @id @default(cuid())
  brandId    String
  brand      Brand    @relation(fields: [brandId], references: [id], onDelete: Cascade)
  organizationId String?
  number     String   @unique
  areaCode   String?
  assignedAt DateTime?
  label      String?
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())

  contactsAssigned Contact[] @relation("AssignedNumber")
}

model Campaign {
  id         String   @id @default(cuid())
  brandId    String
  brand      Brand    @relation(fields: [brandId], references: [id], onDelete: Cascade)
  userId     String?
  user       User?    @relation(fields: [userId], references: [id])
  name       String
  callingMode String
  status     CampaignStatus @default(DRAFT)
  pausedReason String?
  templatePrimary    String?
  templateAlternate  String?
  batchSize          Int?
  intervalMinutes    Int?
  createdAt  DateTime @default(now())
}

model Message {
  id           String   @id @default(cuid())
  brandId      String
  brand        Brand    @relation(fields: [brandId], references: [id], onDelete: Cascade)
  contactId    String
  contact      Contact  @relation(fields: [contactId], references: [id], onDelete: Cascade)
  direction    MessageDirection
  status       MessageStatus
  channel      MessageChannel
  fromNumber   String
  toNumber     String
  body         String?
  sentAt       DateTime?
  twilioSid    String?   @unique
  isAiGenerated Boolean @default(false)
  createdAt    DateTime @default(now())
}

model CallLog {
  id         String   @id @default(cuid())
  brandId    String
  brand      Brand    @relation(fields: [brandId], references: [id], onDelete: Cascade)
  contactId  String
  contact    Contact  @relation(fields: [contactId], references: [id], onDelete: Cascade)
  callSid    String   @unique
  duration   Int?
  status     String?
  transcript String?
  createdAt  DateTime @default(now())
}

model Contact {
  id               String   @id @default(cuid())
  brandId          String
  brand            Brand    @relation(fields: [brandId], references: [id], onDelete: Cascade)
  organizationId   String?
  organization     Organization? @relation(fields: [organizationId], references: [id])
  firstName        String
  lastName         String?
  phone             String
  lineType          String?
  propertyAddress  String?
  propertyCity     String?
  propertyState    String?
  propertyZip      String?
  propertyCounty   String?
  mailingAddress   String?
  mailingCity      String?
  mailingState     String?
  mailingZip       String?
  assignedNumberId String?
  assignedNumber   PhoneNumber? @relation("AssignedNumber", fields: [assignedNumberId], references: [id])
  status           String?
  nextEligibleAt   DateTime?
  aiScore          Decimal?
  tags             String[] @default([])
  updatedAt        DateTime @updatedAt
  createdAt        DateTime @default(now())

  messages         Message[]
  calls            CallLog[]
  customFields     ContactCustomField[]
  contactAudits    ContactAudit[]

  @@index([brandId])
  @@unique([brandId, phone])
}

enum MessageDirection {
  INBOUND
  OUTBOUND
}

enum MessageStatus {
  OUTBOUND_API
  OUTBOUND_MANUAL
  QUEUED
  SENT
  DELIVERED
  FAILED
}

enum MessageChannel {
  SMS
  MANUAL
}

enum CampaignStatus {
  DRAFT
  RUNNING
  PAUSED
  COMPLETED
}

enum Plan {
  STARTER
  PRO
}

model SendingNumber {
  id             String   @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  phoneNumber    String   @unique
  label          String?
  enabled        Boolean  @default(true)
  lastUsedAt     DateTime?
  lastUsedCount  Int      @default(0)
  createdAt      DateTime @default(now())
}

model CustomFieldDefinition {
  id        String   @id @default(cuid())
  brandId   String
  brand     Brand    @relation(fields: [brandId], references: [id], onDelete: Cascade)
  name      String
  type      String
  createdAt DateTime @default(now())

  values    ContactCustomField[]
}

model ContactCustomField {
  id                String   @id @default(cuid())
  contactId         String
  contact           Contact  @relation(fields: [contactId], references: [id], onDelete: Cascade)
  fieldDefinitionId String
  fieldDefinition   CustomFieldDefinition @relation(fields: [fieldDefinitionId], references: [id], onDelete: Cascade)
  value             Json
  createdAt         DateTime @default(now())

  @@index([contactId])
  @@index([fieldDefinitionId])
}

model ContactAudit {
  id              String   @id @default(cuid())
  contactId       String
  contact         Contact  @relation(fields: [contactId], references: [id], onDelete: Cascade)
  changedByUserId String?
  changedBy       String?
  action          String   @default("UPDATE")
  changes         Json
  createdAt       DateTime @default(now())

  @@index([contactId])
}

model Activity {
  id             String   @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  userId         String?
  type           String
  message        String
  meta           Json?
  createdAt      DateTime @default(now())
}
